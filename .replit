hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = [
  "glibcLocales",
  "ta-lib",
  "nodejs_20",
  "python311",
  "python311Packages.numpy",
  "python311Packages.pandas",
  "python311Packages.ccxt",
]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PORT = "5000"
REPLIT = "1"

[deployment]
deploymentTarget = "gce"
run = ["sh", "-c", "sh ./start.sh"]
build = ["npm", "run", "build"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sh -c 'sh ./script/bootstrap_python.sh && npm run dev'"
waitForPort = 5000

[agent]
integrations = ["github:1.0.0"]
